    DeviceModal.Parent = ScreenGui
    DeviceModal.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    DeviceModal.BackgroundTransparency = 0.3
    DeviceModal.Size = UDim2.new(1, 0, 1, 0)
    DeviceModal.ZIndex = 100

