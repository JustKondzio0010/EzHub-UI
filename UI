    PlayerInfoFrame.Name = "PlayerInfoFrame"
    PlayerInfoFrame.Size = UDim2.new(0, playerInfoWidth, 0, 350)
    -- Position to the right of main frame if space allows, otherwise hide or stack?
    -- For now, relative to screen center but offset
    if isMobile then
        PlayerInfoFrame.Visible = false -- Hide by default on mobile to save space
    else
        PlayerInfoFrame.Position = UDim2.new(0.5, width/2 + 10, 0.5, -175)
        PlayerInfoFrame.Visible = false
    end
    PlayerInfoFrame.BackgroundColor3 = Colors.Background
    PlayerInfoFrame.BorderSizePixel = 0
    PlayerInfoFrame.ClipsDescendants = true
    PlayerInfoFrame.Parent = ScreenGui

    Instance.new("UICorner", PlayerInfoFrame).CornerRadius = UDim.new(0, 12)
    Instance.new("UIStroke", PlayerInfoFrame).Color = Colors.Border
    Instance.new("UIStroke", PlayerInfoFrame).Thickness = 1
    CreateStarfield(PlayerInfoFrame)

    local PIHeader = Instance.new("Frame")
    PIHeader.Size = UDim2.new(1, 0, 0, 40)
    PIHeader.BackgroundTransparency = 1
    PIHeader.Parent = PlayerInfoFrame
    MakeDraggable(PlayerInfoFrame, PIHeader)
    
    local PITitle = Instance.new("TextLabel")
    PITitle.Text = "PLAYER INFO"
    PITitle.Font = Enum.Font.GothamBlack
    PITitle.TextSize = 18
    PITitle.TextColor3 = Color3.fromRGB(255, 255, 255)
    PITitle.Size = UDim2.new(1, -20, 1, 0)
    PITitle.Position = UDim2.new(0, 15, 0, 0)
    PITitle.TextXAlignment = Enum.TextXAlignment.Left
    PITitle.BackgroundTransparency = 1
    PITitle.Parent = PIHeader

    -- Player Info Content
    local PAvatar = Instance.new("ImageLabel")
    PAvatar.Size = UDim2.new(0, 80, 0, 80)
    PAvatar.Position = UDim2.new(0.5, -40, 0, 50)
    PAvatar.BackgroundColor3 = Colors.DarkContrast
    PAvatar.Parent = PlayerInfoFrame
    Instance.new("UICorner", PAvatar).CornerRadius = UDim.new(1, 0)
    Instance.new("UIStroke", PAvatar).Color = Colors.Border
    task.spawn(function() PAvatar.Image = Players:GetUserThumbnailAsync(LocalPlayer.UserId, Enum.ThumbnailType.HeadShot, Enum.ThumbnailSize.Size100x100) end)

    local PName = Instance.new("TextLabel")
    PName.Text = LocalPlayer.DisplayName
    PName.Size = UDim2.new(1, 0, 0, 20)
    PName.Position = UDim2.new(0, 0, 0, 140)
    PName.BackgroundTransparency = 1
    PName.TextColor3 = accentColor
    PName.Font = Enum.Font.GothamBold
    PName.TextSize = 16
    PName.Parent = PlayerInfoFrame

    local PUser = Instance.new("TextLabel")
    PUser.Text = "@" .. LocalPlayer.Name
    PUser.Size = UDim2.new(1, 0, 0, 15)
    PUser.Position = UDim2.new(0, 0, 0, 160)
    PUser.BackgroundTransparency = 1
    PUser.TextColor3 = Colors.Secondary
    PUser.Font = Enum.Font.Gotham
    PUser.TextSize = 12
    PUser.Parent = PlayerInfoFrame

    local DetailsFrame = Instance.new("Frame")
    DetailsFrame.Size = UDim2.new(1, -20, 0, 130)
    DetailsFrame.Position = UDim2.new(0, 10, 0, 190)
    DetailsFrame.BackgroundColor3 = Colors.DarkContrast
    DetailsFrame.Parent = PlayerInfoFrame
    Instance.new("UICorner", DetailsFrame).CornerRadius = UDim.new(0, 6)

    local function CreateDetailRow(label, value, order)
        local Row = Instance.new("Frame")
        Row.Size = UDim2.new(1, 0, 0, 25)
        Row.Position = UDim2.new(0, 0, 0, (order - 1) * 25)
        Row.BackgroundTransparency = 1
        Row.Parent = DetailsFrame
        
        local L = Instance.new("TextLabel")
        L.Text = label
        L.Size = UDim2.new(0.4, 0, 1, 0)
        L.Position = UDim2.new(0, 10, 0, 0)
        L.BackgroundTransparency = 1
        L.TextColor3 = Colors.Secondary
        L.Font = Enum.Font.Gotham
        L.TextSize = 11
        L.TextXAlignment = Enum.TextXAlignment.Left
        L.Parent = Row
        
        local V = Instance.new("TextLabel")
        V.Text = value
        V.Size = UDim2.new(0.6, -10, 1, 0)
        V.Position = UDim2.new(0.4, 0, 0, 0)
        V.BackgroundTransparency = 1
        V.TextColor3 = accentColor
        V.Font = Enum.Font.GothamBold
        V.TextSize = 11
        V.TextXAlignment = Enum.TextXAlignment.Right
        V.Parent = Row
        return V
    end

    local executorName = (identifyexecutor and identifyexecutor()) or "Unknown"
    CreateDetailRow("User ID", LocalPlayer.UserId, 1)
    CreateDetailRow("Account Age", LocalPlayer.AccountAge .. " Days", 2)
    CreateDetailRow("Executor", executorName, 3)
    CreateDetailRow("Game ID", game.PlaceId, 4)
    local ServerSizeLabel = CreateDetailRow("Server Size", #Players:GetPlayers() .. "/" .. Players.MaxPlayers, 5)

    task.spawn(function()
        while PlayerInfoFrame.Parent do
             ServerSizeLabel.Text = #Players:GetPlayers() .. "/" .. Players.MaxPlayers
             task.wait(5)
        end
    end)

    -- Containers
    local TabContainer = Instance.new("ScrollingFrame")
    TabContainer.Size = UDim2.new(0, 140, 1, -40)
    TabContainer.Position = UDim2.new(0, 0, 0, 40)
    TabContainer.BackgroundColor3 = Colors.Sidebar
    TabContainer.BorderSizePixel = 0
    TabContainer.ScrollBarThickness = 2
    TabContainer.Parent = MainFrame

    local TabList = Instance.new("UIListLayout")
    TabList.Parent = TabContainer
    TabList.SortOrder = Enum.SortOrder.LayoutOrder
    TabList.Padding = UDim.new(0, 5)

    local ContentContainer = Instance.new("Frame")
    ContentContainer.Size = UDim2.new(1, -140, 1, -40)
    ContentContainer.Position = UDim2.new(0, 140, 0, 40)
    ContentContainer.BackgroundTransparency = 1
    ContentContainer.Parent = MainFrame

    local Window = {
        ScreenGui = ScreenGui,
        MainFrame = MainFrame,
        PlayerInfoFrame = PlayerInfoFrame,
        Tabs = {},
        ActiveTab = nil
    }

    local isMin = false
    MinBtn.MouseButton1Click:Connect(function()
        isMin = not isMin
        if isMin then
            FloatingIcon:SetAttribute("Minimizing", true)
            
            TabContainer.Visible = false
            ContentContainer.Visible = false
            if not isMobile then PlayerInfoFrame.Visible = false end
            
            TweenService:Create(FloatingIcon, TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.In), {Position = UDim2.new(0.5, 0, 1.5, 0), ImageTransparency = 1}):Play()
            TweenService:Create(MainFrame, TweenInfo.new(0.4, Enum.EasingStyle.Quart, Enum.EasingDirection.Out), {Size = UDim2.new(0, width, 0, 40)}):Play()
            if not isMobile then TweenService:Create(PlayerInfoFrame, TweenInfo.new(0.4, Enum.EasingStyle.Quart, Enum.EasingDirection.Out), {Size = UDim2.new(0, playerInfoWidth, 0, 0)}):Play() end
            MinBtn.Text = "+"
        else
            FloatingIcon.Visible = true
            FloatingIcon.ImageTransparency = 0
            TweenService:Create(FloatingIcon, TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {Position = UDim2.new(0.5, 0, 0, -70)}):Play()
            task.delay(0.5, function() FloatingIcon:SetAttribute("Minimizing", false) end)
            
            TweenService:Create(MainFrame, TweenInfo.new(0.4, Enum.EasingStyle.Quart, Enum.EasingDirection.Out), {Size = UDim2.new(0, width, 0, height)}):Play()
            if not isMobile then TweenService:Create(PlayerInfoFrame, TweenInfo.new(0.4, Enum.EasingStyle.Quart, Enum.EasingDirection.Out), {Size = UDim2.new(0, playerInfoWidth, 0, 350)}):Play() end
            
            task.wait(0.4)
            TabContainer.Visible = true
            ContentContainer.Visible = true
            if not isMobile then PlayerInfoFrame.Visible = true end
            
            MinBtn.Text = "-"
        end
    end)

    function Window:Toggle()
        MainFrame.Visible = not MainFrame.Visible
        if not isMobile then
             PlayerInfoFrame.Visible = MainFrame.Visible
        end
    end
    
    function Window:Show()
        MainFrame.Visible = true
        FloatingIcon.Visible = true
        FloatingIcon.ImageTransparency = 0
        
        MainFrame.Size = UDim2.new(0, width, 0, 0)
        if not isMobile then PlayerInfoFrame.Size = UDim2.new(0, playerInfoWidth, 0, 0) end
        
        TweenService:Create(MainFrame, TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {Size = UDim2.new(0, width, 0, height)}):Play()
        if not isMobile then 
            PlayerInfoFrame.Visible = true
            TweenService:Create(PlayerInfoFrame, TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {Size = UDim2.new(0, playerInfoWidth, 0, 350)}):Play()
        end
    end

    function Window:Load()
        local LoadingFrame = Instance.new("Frame")
        LoadingFrame.Name = "LoadingScreen"
        LoadingFrame.Size = UDim2.new(1, 0, 1, 100) 
        LoadingFrame.Position = UDim2.new(0, 0, 0, -50)
        LoadingFrame.BackgroundColor3 = Color3.fromRGB(8, 8, 10) 
        LoadingFrame.BackgroundTransparency = 0
        LoadingFrame.ZIndex = 100
        LoadingFrame.Parent = ScreenGui
        
        task.spawn(function() CreateStarfield(LoadingFrame) end)
        
        local GradientColor = ColorSequence.new({
            ColorSequenceKeypoint.new(0, accentColor), 
            ColorSequenceKeypoint.new(0.5, Color3.fromRGB(255, 255, 255)), 
            ColorSequenceKeypoint.new(1, accentColor) 
        })

        local WelcomeLabel = Instance.new("TextLabel")
        WelcomeLabel.Text = "Welcome Back, " .. LocalPlayer.DisplayName
        WelcomeLabel.Font = Enum.Font.GothamBlack
        WelcomeLabel.TextSize = 32
        WelcomeLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
        WelcomeLabel.Size = UDim2.new(1, 0, 0, 60)
        WelcomeLabel.Position = UDim2.new(0.5, 0, 0, -100) 
        WelcomeLabel.AnchorPoint = Vector2.new(0.5, 0.5)
        WelcomeLabel.BackgroundTransparency = 1
        WelcomeLabel.TextTransparency = 0
        WelcomeLabel.Parent = LoadingFrame
        
        local WelcomeGradient = Instance.new("UIGradient")
        WelcomeGradient.Color = GradientColor
        WelcomeGradient.Parent = WelcomeLabel

        -- Logo
        local LoadingLogo = Instance.new("ImageLabel")
        LoadingLogo.Size = UDim2.new(0.3, 0, 0.3, 0) 
        LoadingLogo.Position = UDim2.new(0.5, 0, 0, -450) 
        LoadingLogo.AnchorPoint = Vector2.new(0.5, 0.5) 
        LoadingLogo.BackgroundTransparency = 1
        LoadingLogo.Image = "rbxassetid://102171960897605"
        LoadingLogo.Parent = LoadingFrame
        
        local LogoAspect = Instance.new("UIAspectRatioConstraint")
        LogoAspect.AspectRatio = 0.75 
        LogoAspect.Parent = LoadingLogo
        
        -- Loading Bar
        local LoadingBarBg = Instance.new("Frame")
        LoadingBarBg.Size = UDim2.new(0.8, 0, 0, 4)
        LoadingBarBg.Position = UDim2.new(0.1, 0, 0.85, 0)
        LoadingBarBg.BackgroundColor3 = Color3.fromRGB(40, 40, 50)
        LoadingBarBg.BorderSizePixel = 0
        LoadingBarBg.BackgroundTransparency = 1 -- Initially hidden
        LoadingBarBg.Parent = LoadingFrame
        Instance.new("UICorner", LoadingBarBg).CornerRadius = UDim.new(1, 0)
        
        local LoadingBarFill = Instance.new("Frame")
        LoadingBarFill.Size = UDim2.new(0, 0, 1, 0)
        LoadingBarFill.BackgroundColor3 = accentColor
        LoadingBarFill.BorderSizePixel = 0
        LoadingBarFill.Parent = LoadingBarBg
        Instance.new("UICorner", LoadingBarFill).CornerRadius = UDim.new(1, 0)
        
        task.spawn(function()
            local welcomeCenter = UDim2.new(0.5, 0, 0.5, 0)
            local welcomeExit = UDim2.new(0.5, 0, 1.2, 0) 
            
            TweenService:Create(WelcomeLabel, TweenInfo.new(1, Enum.EasingStyle.Bounce, Enum.EasingDirection.Out), {Position = welcomeCenter}):Play()
            task.wait(2) 
            
            TweenService:Create(WelcomeLabel, TweenInfo.new(0.6, Enum.EasingStyle.Back, Enum.EasingDirection.In), {Position = welcomeExit, TextTransparency = 1}):Play()
            task.wait(0.4) 
            
            local logoTarget = UDim2.new(0.5, 0, 0.4, 0)
            TweenService:Create(LoadingLogo, TweenInfo.new(1, Enum.EasingStyle.Bounce, Enum.EasingDirection.Out), {Position = logoTarget}):Play()
            
            task.wait(1)

            -- Levitate Logo
            task.spawn(function()
                local t = 0
                while LoadingLogo.Parent do
                    t = t + RunService.Heartbeat:Wait()
                    local yOffset = math.sin(t * 2) * 15
                    LoadingLogo.Position = UDim2.new(logoTarget.X.Scale, logoTarget.X.Offset, logoTarget.Y.Scale, logoTarget.Y.Offset + yOffset)
                end
            end)
            
            TweenService:Create(LoadingBarBg, TweenInfo.new(0.5), {BackgroundTransparency = 0}):Play()
            TweenService:Create(LoadingBarFill, TweenInfo.new(2, Enum.EasingStyle.Linear), {Size = UDim2.new(1, 0, 1, 0)}):Play()
            
            task.wait(2)
            
            TweenService:Create(LoadingFrame, TweenInfo.new(0.5), {BackgroundTransparency = 1}):Play()
            TweenService:Create(LoadingLogo, TweenInfo.new(0.5), {ImageTransparency = 1}):Play()
            TweenService:Create(LoadingBarBg, TweenInfo.new(0.5), {BackgroundTransparency = 1}):Play()
            TweenService:Create(LoadingBarFill, TweenInfo.new(0.5), {BackgroundTransparency = 1}):Play()
            
            task.wait(0.5)
            LoadingFrame:Destroy()
            
            Window:Show()
        end)
    end

    -- Tab Functionality
    function Window:CreateTab(name)
        local TabButton = Instance.new("TextButton")
        TabButton.Size = UDim2.new(1, 0, 0, 40)
        TabButton.BackgroundTransparency = 1
        TabButton.Text = name
        TabButton.TextColor3 = Colors.Secondary
        TabButton.Font = Enum.Font.GothamBold
        TabButton.TextSize = 14
        TabButton.Parent = TabContainer
        
        local TabFrame = Instance.new("ScrollingFrame")
        TabFrame.Size = UDim2.new(1, -20, 1, -20)
        TabFrame.Position = UDim2.new(0, 10, 0, 10)
        TabFrame.BackgroundTransparency = 1
        TabFrame.ScrollBarThickness = 2
        TabFrame.Visible = false
        TabFrame.Parent = ContentContainer
        
        local Layout = Instance.new("UIListLayout")
        Layout.Parent = TabFrame
        Layout.Padding = UDim.new(0, 10)
        Layout.SortOrder = Enum.SortOrder.LayoutOrder
        
        TabFrame.CanvasSize = UDim2.new(0, 0, 0, 0)
        Layout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
            TabFrame.CanvasSize = UDim2.new(0, 0, 0, Layout.AbsoluteContentSize.Y + 20)
        end)

        local TabObj = {
            Button = TabButton,
            Frame = TabFrame
        }

        TabButton.MouseButton1Click:Connect(function()
            for _, t in pairs(Window.Tabs) do
                t.Frame.Visible = false
                TweenService:Create(t.Button, TweenInfo.new(0.2), {TextColor3 = Colors.Secondary}):Play()
            end
            TabFrame.Visible = true
            TweenService:Create(TabButton, TweenInfo.new(0.2), {TextColor3 = accentColor}):Play()
            Window.ActiveTab = TabObj
        end)

        if #Window.Tabs == 0 then
            TabFrame.Visible = true
            TabButton.TextColor3 = accentColor
            Window.ActiveTab = TabObj
        end

        table.insert(Window.Tabs, TabObj)

        -- Element Functions
        local TabAPI = {}

        function TabAPI:CreateParagraph(title, content)
            local Frame = Instance.new("Frame")
            Frame.Size = UDim2.new(1, 0, 0, 0) -- Auto size
            Frame.BackgroundColor3 = Colors.DarkContrast
            Frame.Parent = TabFrame
            Instance.new("UICorner", Frame).CornerRadius = UDim.new(0, 8)
            Instance.new("UIStroke", Frame).Color = Colors.Border
            
            local Title = Instance.new("TextLabel")
            Title.Text = title
            Title.Size = UDim2.new(1, -20, 0, 25)
            Title.Position = UDim2.new(0, 10, 0, 5)
            Title.BackgroundTransparency = 1
            Title.TextColor3 = Colors.Text
            Title.Font = Enum.Font.GothamBold
            Title.TextSize = 14
            Title.TextXAlignment = Enum.TextXAlignment.Left
            Title.Parent = Frame
            
            local Content = Instance.new("TextLabel")
            Content.Text = content
            Content.Size = UDim2.new(1, -20, 0, 0)
            Content.Position = UDim2.new(0, 10, 0, 30)
            Content.BackgroundTransparency = 1
            Content.TextColor3 = Colors.Secondary
            Content.Font = Enum.Font.Gotham
            Content.TextSize = 12
            Content.TextXAlignment = Enum.TextXAlignment.Left
            Content.TextWrapped = true
            Content.Parent = Frame
            
            -- Calculate height
            Content.Size = UDim2.new(1, -20, 0, 1000) -- Temporary large height to measure
            local bounds = Content.TextBounds
            Content.Size = UDim2.new(1, -20, 0, bounds.Y)
            Frame.Size = UDim2.new(1, 0, 0, bounds.Y + 40)
            
            return Frame
        end

        function TabAPI:CreateToggle(text, default, callback)
            local state = default or false
            local Frame = Instance.new("Frame")
            Frame.Size = UDim2.new(1, 0, 0, 40)
            Frame.BackgroundColor3 = Colors.DarkContrast
            Frame.Parent = TabFrame
            Instance.new("UICorner", Frame).CornerRadius = UDim.new(0, 8)
            Instance.new("UIStroke", Frame).Color = Colors.Border

            local Label = Instance.new("TextLabel")
            Label.Text = text
            Label.Size = UDim2.new(0.7, -10, 1, 0)
            Label.Position = UDim2.new(0, 10, 0, 0)
            Label.BackgroundTransparency = 1
            Label.TextColor3 = Colors.Secondary
            Label.Font = Enum.Font.GothamMedium
            Label.TextSize = 16
            Label.TextXAlignment = Enum.TextXAlignment.Left
            Label.Parent = Frame

            local Btn = Instance.new("TextButton")
            Btn.Size = UDim2.new(0, 50, 0, 26)
            Btn.Position = UDim2.new(1, -60, 0.5, -13)
            Btn.BackgroundColor3 = state and accentColor or Color3.fromRGB(50, 50, 60)
            Btn.Text = ""
            Btn.Parent = Frame
            Instance.new("UICorner", Btn).CornerRadius = UDim.new(1, 0)

            local Circle = Instance.new("Frame")
            Circle.Size = UDim2.new(0, 20, 0, 20)
            Circle.Position = state and UDim2.new(1, -23, 0.5, -10) or UDim2.new(0, 3, 0.5, -10)
            Circle.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
            Circle.Parent = Btn
            Instance.new("UICorner", Circle).CornerRadius = UDim.new(1, 0)

            Btn.MouseButton1Click:Connect(function()
                state = not state
                local targetPos = state and UDim2.new(1, -23, 0.5, -10) or UDim2.new(0, 3, 0.5, -10)
                local targetColor = state and accentColor or Color3.fromRGB(50, 50, 60)
                TweenService:Create(Circle, TweenInfo.new(0.2), {Position = targetPos}):Play()
                TweenService:Create(Btn, TweenInfo.new(0.2), {BackgroundColor3 = targetColor}):Play()
                if callback then callback(state) end
            end)
            
            return {
                Set = function(self, val)
                    state = val
                    local targetPos = state and UDim2.new(1, -23, 0.5, -10) or UDim2.new(0, 3, 0.5, -10)
                    local targetColor = state and accentColor or Color3.fromRGB(50, 50, 60)
                    Circle.Position = targetPos
                    Btn.BackgroundColor3 = targetColor
                    if callback then callback(state) end
                end
            }
        end

        function TabAPI:CreateButton(text, callback)
            local Btn = Instance.new("TextButton")
            Btn.Size = UDim2.new(1, 0, 0, 40)
            Btn.BackgroundColor3 = Colors.DarkContrast
            Btn.Text = text
            Btn.TextColor3 = Colors.Secondary
            Btn.Font = Enum.Font.GothamBold
            Btn.TextSize = 16
            Btn.Parent = TabFrame
            Instance.new("UICorner", Btn).CornerRadius = UDim.new(0, 8)
            Instance.new("UIStroke", Btn).Color = Colors.Border
            
            Btn.MouseEnter:Connect(function()
                TweenService:Create(Btn, TweenInfo.new(0.3), {BackgroundColor3 = Color3.fromRGB(25, 25, 30)}):Play()
            end)
            Btn.MouseLeave:Connect(function()
                TweenService:Create(Btn, TweenInfo.new(0.3), {BackgroundColor3 = Colors.DarkContrast}):Play()
            end)
            Btn.MouseButton1Click:Connect(callback)
            return Btn
        end

        function TabAPI:CreateSlider(text, min, max, default, callback)
            local Frame = Instance.new("Frame")
            Frame.Size = UDim2.new(1, 0, 0, 60)
            Frame.BackgroundColor3 = Colors.DarkContrast
            Frame.Parent = TabFrame
            Instance.new("UICorner", Frame).CornerRadius = UDim.new(0, 8)
            Instance.new("UIStroke", Frame).Color = Colors.Border

            local Label = Instance.new("TextLabel")
            Label.Text = text
            Label.Size = UDim2.new(1, -20, 0, 25)
            Label.Position = UDim2.new(0, 10, 0, 5)
            Label.BackgroundTransparency = 1
            Label.TextColor3 = Colors.Secondary
            Label.Font = Enum.Font.GothamMedium
            Label.TextSize = 16
            Label.TextXAlignment = Enum.TextXAlignment.Left
            Label.Parent = Frame

            local SliderFrame = Instance.new("Frame")
            SliderFrame.Position = UDim2.new(0, 10, 0, 35)
            SliderFrame.Size = UDim2.new(1, -20, 0, 15)
            SliderFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 35)
            SliderFrame.Parent = Frame
            Instance.new("UICorner", SliderFrame).CornerRadius = UDim.new(1, 0)

            local SliderFill = Instance.new("Frame")
            SliderFill.Size = UDim2.new(0, 0, 1, 0)
            SliderFill.BackgroundColor3 = accentColor
            SliderFill.Parent = SliderFrame
            Instance.new("UICorner", SliderFill).CornerRadius = UDim.new(1, 0)

            local SliderValue = Instance.new("TextLabel")
            SliderValue.Size = UDim2.new(1, 0, 1, 0)
            SliderValue.BackgroundTransparency = 1
            SliderValue.Text = tostring(default)
            SliderValue.TextColor3 = Color3.fromRGB(200, 200, 200)
            SliderValue.Font = Enum.Font.Gotham
            SliderValue.TextSize = 12
            SliderValue.Parent = SliderFrame

            local function updateSlider(input)
                local pos = UDim2.new(math.clamp((input.Position.X - SliderFrame.AbsolutePosition.X) / SliderFrame.AbsoluteSize.X, 0, 1), 0, 1, 0)
                SliderFill.Size = pos
                local val = math.floor(((pos.X.Scale * (max - min)) + min) * 100) / 100
                SliderValue.Text = tostring(val)
                if callback then callback(val) end
            end

            local dragging = false
            SliderFrame.InputBegan:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
                    dragging = true
                    updateSlider(input)
                end
            end)

            UserInputService.InputChanged:Connect(function(input)
                if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
                    updateSlider(input)
                end
            end)

            UserInputService.InputEnded:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
                    dragging = false
                end
            end)
            
            -- Set initial
            local startPercent = (default - min) / (max - min)
            SliderFill.Size = UDim2.new(startPercent, 0, 1, 0)
            
            return Frame
        end
        
        return TabAPI
    end

    return Window
end

return Library
